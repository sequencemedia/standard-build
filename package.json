{
  "name": "@sequencemedia/standard-build",
  "version": "1.0.0",
  "description": "Standard Build",
  "private": true,
  "main": "./app.js",
  "author": {
    "name": "Jonathan Perry for Sequence Media Limited",
    "email": "sequencemedia@sequencemedia.net",
    "url": "http://sequencemedia.net"
  },
  "license": "UNLICENSED",
  "scripts": {
    "start": "cross-env NODE_ENV=production DEBUG=@sequencemedia node app",
    "dev": "cross-env NODE_ENV=development concurrently -r \"npm run gulp\" \"webpack --config webpack.dev.js --watch\"",
    "build": "cross-env NODE_ENV=production concurrently -r \"npm run gulp -- build\" \"webpack --env prod --config webpack.prod.js\"",
    "build:font": "npm run gulp -- build:font",
    "build:img": "npm run gulp -- build:img",
    "build:css": "npm run gulp -- build:css",
    "build:js": "webpack --config webpack.dev.js",
    "watch": "cross-env NODE_ENV=development concurrently -r \"npm run gulp -- watch\" \"webpack --config webpack.dev.js --watch\"",
    "watch:font": "npm run gulp -- watch:font",
    "watch:img": "npm run gulp -- watch:img",
    "watch:css": "npm run gulp -- watch:css",
    "watch:js": "webpack --config webpack.dev.js --watch",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:fix": "npm run lint:js:fix && npm run lint:css:fix",
    "lint:js": "eslint .",
    "lint:js:fix": "npm run lint:js -- --fix",
    "lint:css": "stylelint source/assets/sass",
    "lint:css:fix": "npm run lint:css -- --fix",
    "test": "cross-env NODE_ENV=test mocha test --recursive -r @babel/register --verbose --color",
    "gulp": "gulp --color ",
    "pre-commit": "npm run lint && npm run test && npm run build && git add public"
  },
  "dependencies": {
    "clean-webpack-plugin": "^3.0.0",
    "cross-env": "^7.0.3",
    "cssnano": "^4.1.10",
    "debug": "^4.3.1",
    "dotenv": "^8.2.0",
    "glob-all": "^3.2.1",
    "gulp": "^4.0.2",
    "gulp-clean-css": "^4.3.0",
    "gulp-css-purge": "^3.0.9",
    "gulp-debug": "^4.0.0",
    "gulp-postcss": "^9.0.0",
    "gulp-rename": "^2.0.0",
    "gulp-sass": "^4.1.0",
    "gulp-sourcemaps": "^3.0.0",
    "module-alias": "^2.2.2",
    "postcss": "^8.2.8",
    "postcss-normalize": "^9.0.0",
    "postcss-scss": "^3.0.5",
    "stylelint": "^13.12.0",
    "stylelint-config-recommended-scss": "^4.2.0",
    "stylelint-scss": "^3.19.0",
    "terser-webpack-plugin": "^5.1.1",
    "vinyl-paths": "^3.0.1",
    "webpack": "^5.24.4",
    "webpack-cli": "^4.5.0",
    "webpack-merge": "^5.7.3",
    "yargs-parser": "^20.2.7"
  },
  "devDependencies": {
    "@babel/cli": "^7.13.10",
    "@babel/core": "^7.13.10",
    "@babel/eslint-parser": "^7.13.10",
    "@babel/plugin-proposal-class-properties": "^7.13.0",
    "@babel/plugin-proposal-export-default-from": "^7.12.13",
    "@babel/plugin-proposal-export-namespace-from": "^7.12.13",
    "@babel/plugin-transform-runtime": "^7.13.10",
    "@babel/preset-env": "^7.13.10",
    "@babel/register": "^7.13.8",
    "babel-loader": "^8.2.2",
    "babel-plugin-minify-dead-code-elimination": "^0.5.1",
    "babel-plugin-module-resolver": "^4.1.0",
    "chai": "^4.3.3",
    "concurrently": "^6.0.0",
    "core-js": "^3.9.1",
    "eslint": "^7.21.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-import-resolver-babel-module": "^5.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-mocha": "^8.1.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.3.1",
    "husky": "^5.1.3",
    "mocha": "^8.3.1",
    "sinon": "^9.2.4",
    "sinon-chai": "^3.5.0"
  },
  "_moduleAliases": {
    "~": "."
  }
}
