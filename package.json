{
  "name": "@sequencemedia/standard-build",
  "version": "1.0.4",
  "description": "Standard Build",
  "private": true,
  "main": "./app.js",
  "author": {
    "name": "Jonathan Perry for Sequence Media Limited",
    "email": "sequencemedia@sequencemedia.net",
    "url": "http://sequencemedia.net"
  },
  "license": "UNLICENSED",
  "scripts": {
    "start": "cross-env NODE_ENV=production DEBUG=@sequencemedia node app",
    "dev": "cross-env NODE_ENV=development concurrently -r \"npm run gulp\" \"webpack --config webpack.dev.js --watch\"",
    "build": "cross-env NODE_ENV=production concurrently -r \"npm run gulp -- build\" \"webpack --env prod --config webpack.prod.js\"",
    "build:font": "source nvm.sh && npm run gulp -- build:font",
    "build:img": "source nvm.sh && npm run gulp -- build:img",
    "build:css": "source nvm.sh && npm run gulp -- build:css",
    "build:js": "source nvm.sh && webpack --config webpack.dev.js",
    "watch": "cross-env NODE_ENV=development concurrently -r \"npm run gulp -- watch\" \"webpack --config webpack.dev.js --watch\"",
    "watch:font": "npm run gulp -- watch:font",
    "watch:img": "npm run gulp -- watch:img",
    "watch:css": "npm run gulp -- watch:css",
    "watch:js": "webpack --config webpack.dev.js --watch",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:fix": "npm run lint:js:fix && npm run lint:css:fix",
    "lint:js": "eslint .",
    "lint:js:fix": "npm run lint:js -- --fix",
    "lint:css": "stylelint source/assets/sass",
    "lint:css:fix": "npm run lint:css -- --fix",
    "test": "cross-env NODE_ENV=test mocha test --recursive -r @babel/register --verbose --color",
    "gulp": "source nvm.sh && gulp --color ",
    "nvm": "bash nvm.sh",
    "pre-commit": "npm run lint && npm run test && npm run build && git add public"
  },
  "dependencies": {
    "clean-webpack-plugin": "^4.0.0",
    "cross-env": "^7.0.3",
    "cssnano": "^5.0.16",
    "debug": "^4.3.3",
    "dotenv": "^14.3.2",
    "glob-all": "^3.2.1",
    "gulp": "^4.0.2",
    "gulp-clean-css": "^4.3.0",
    "gulp-css-purge": "^3.0.9",
    "gulp-debug": "^4.0.0",
    "gulp-postcss": "^9.0.1",
    "gulp-rename": "^2.0.0",
    "gulp-sass": "^5.1.0",
    "gulp-sourcemaps": "^3.0.0",
    "module-alias": "^2.2.2",
    "postcss": "^8.4.5",
    "postcss-normalize": "^10.0.1",
    "postcss-scss": "^4.0.3",
    "sass": "^1.49.0",
    "stylelint": "^14.3.0",
    "stylelint-config-recommended-scss": "^5.0.2",
    "stylelint-scss": "^4.1.0",
    "terser-webpack-plugin": "^5.3.0",
    "vinyl-paths": "3.0.1",
    "webpack": "^5.67.0",
    "webpack-cli": "^4.9.2",
    "webpack-merge": "^5.8.0",
    "yargs-parser": "^21.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.16.8",
    "@babel/core": "^7.16.12",
    "@babel/eslint-parser": "^7.16.5",
    "@babel/plugin-proposal-class-properties": "^7.16.7",
    "@babel/plugin-proposal-export-default-from": "^7.16.7",
    "@babel/plugin-proposal-export-namespace-from": "^7.16.7",
    "@babel/plugin-transform-runtime": "^7.16.10",
    "@babel/preset-env": "^7.16.11",
    "@babel/register": "^7.16.9",
    "autoprefixer": "^10.4.2",
    "babel-loader": "^8.2.3",
    "babel-plugin-minify-dead-code-elimination": "^0.5.1",
    "babel-plugin-module-resolver": "^4.1.0",
    "chai": "^4.3.5",
    "concurrently": "^7.0.0",
    "core-js": "^3.20.3",
    "eslint": "7.32.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-import-resolver-babel-module": "^5.3.1",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-mocha": "^10.0.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "5.2.0",
    "husky": "^7.0.4",
    "mocha": "^9.2.0",
    "sinon": "^12.0.1",
    "sinon-chai": "^3.7.0"
  },
  "_moduleAliases": {
    "~": "."
  }
}
